{% extends 'layout.njk'%}

{% block content %}
    <body>
     
        <div class="container">
          
                <div id="recept__img">
                    <img src="{{ receita.img }}" alt="">
                </div>
                
                    <div id="recept__title">
                    <h1>{{ receita.name }}</h1>
                    </div>
                    <div id="recept__subtitle">
                        <p>{{receita.subtitle}}</p>
                    </div>
                    
                    <div class="label" id="ingredients">
                        <span>Ingredientes</span>
                    </div>                
                    
                    <div id="repect__ingredients">
                    {%for ingredient in receita.ingredients%}
                        <ul>
                            <li>{{ingredient.ingredient_name}}</li>
                        </ul>
                    {% endfor %}                
                    </div> 

                    <div class="label" id="prepare">
                        <span>Modo de preparo</span>
                    </div>

                    <div class="label" id="description">
                        <span>Informais adicionais</span>
                    </div>

                    <div id="repect__prepare">
                        <p>{{receita.prepare}}</p>
                    </div>

           
                                              
        </div>
            <div id="wrapper">
                <footer>
                    <div id="footer">
                        <p>Copyright foodfy</p>
                    </div>
                </footer>
            </div>
     
    </body>
{% endblock %}
